<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F42B2"
        android:elevation="8dp"
        android:layout_margin="16dp"
        >
        <TextView
            android:id = "@+id/sms_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/sms_add_title"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/textColorPrimary"/>
    </FrameLayout>
    <EditText
        android:id="@+id/edit_text_sender"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/AA_edittxt_hint_sender"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/edit_text_body"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/AA_edittxt_hint"
        android:inputType="textMultiLine"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AA_btn_send"
        android:onClick="sendSMS"
        android:layout_margin="16dp"
        />

</LinearLayout>