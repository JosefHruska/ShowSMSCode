<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        />

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:id="@+id/constraintLayout">

    <TextView

        android:id="@+id/MA_tv_reportIssue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:onClick="openBrowser"
        android:paddingBottom="12dp"
        android:text="@string/MA_text_reportIssue"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/MA_tv_author"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp" />

    <TextView

        android:id="@+id/MA_tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openBrowser"
        android:paddingBottom="12dp"
        android:text="@string/MA_text_Aboutauthor"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.62" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="openBrowser"
        android:text="@string/MA_text_addToGithub"
        android:id="@+id/MA_tv_addToGit"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/MA_tv_notRecognized"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:text="@string/MA_text_notRecognized"
        android:id="@+id/MA_tv_notRecognized"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        android:layout_marginBottom="80dp" />

    <TextView
        android:id="@+id/MA_tv_sourceCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="openBrowser"
        android:paddingBottom="12dp"
        android:text="@string/MA_text_openSourceCode"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/MA_tv_author"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center"
        android:maxLines="3"
        android:minLines="3"
        android:text="@string/MA_text_state"
        app:layout_constraintLeft_toRightOf="@+id/iv_state"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/iv_state"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_state" />

    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="111dp"
        android:layout_height="117dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.11"
        android:gravity="center"
        android:src="@drawable/ic_check_circle"
        android:tint="@color/green"
        android:contentDescription="@null"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="112dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.25" />


</android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>